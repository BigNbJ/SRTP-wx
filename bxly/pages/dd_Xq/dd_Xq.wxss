.ding_xq{
    border-bottom: 20rpx solid #f3f3f3;
  padding: 20rpx;
}

.ding_xq .bt{
  border-bottom: solid 1px #eee;
  padding: 0 0 10rpx 0;
  margin-bottom: 10rpx;
  position: relative;
  padding-left:12rpx;
}
.ding_xq .bt::after{ 
  content: "";
  width: 4rpx;
  height: 30rpx;
  background: #FE5723;
  position: absolute;
  display: block;
  top: 0;
  left: 0;
  bottom: 0;
  margin: auto;
}
.ding_xq .kuang{
  line-height: 55rpx;
  overflow: hidden;
  color: #999;
}
.ding_xq .kuang:last-child{
  border-top: solid 1px #eee;
  margin-top: 10rpx;
  padding-top: 10rpx;
}

.ding_xq .kuang text{
  float: right;
  color: #444;
}
.ding_xq .kuang:last-child text{
  color: #FE5723;
  font-size: 45rpx;
}

.ding_xq .xinxi{
  color: #999;
  line-height: 55rpx;

}
.ding_xq .xinxi text{
  color: #444;
  float: right;
  width: 60%
}

